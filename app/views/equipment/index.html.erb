<h1>Equipment list</h1>

<p><%= link_to 'Add equipment', new_equipment_path %></p>

<table>
  <tr>
    <th>Barcode</th>
    <th>Name</th>
    <th>Actions</th>
  </tr>

<% @equipment.each do |equipment| %>
  <tr>
    <td width="30%"><%= equipment.barcode %></td>
    <td width="35%"><%= equipment.name %></td>
    <td width="30%" class="actions">
		<ul class="inline-list">
			<li><%= link_to 'Show', equipment %></li>
			<li><%= link_to 'Edit', edit_equipment_path(equipment) %></li>
			<li><%= link_to 'Destroy', equipment, confirm: 'Are you sure?', method: :delete %></li>
		</ul>
	</td>
  </tr>
<% end %>
</table>

<br />

<p><%= link_to 'Add equipment', new_equipment_path %></p>
