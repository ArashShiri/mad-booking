<h1>Listing equipment</h1>

<table>
  <tr>
    <th>Barcode</th>
    <th>Name</th>
    <th>Stored</th>
    <th>Status</th>
    <th>Actions</th>
  </tr>

<% @equipment.each do |equipment| %>
  <tr>
    <td><%= equipment.barcode %></td>
    <td><%= equipment.name %></td>
    <td><%= equipment.stored %></td>
    <td><%= equipment.status %></td>
    <td class="actions">
		<ul class="inline-list">
			<li><%= link_to 'Show', equipment %></li>
			<li><%= link_to 'Edit', edit_equipment_path(equipment) %></li>
			<li><%= link_to 'Destroy', equipment, confirm: 'Are you sure?', method: :delete %></li>
		</ul>
	</td>
  </tr>
<% end %>
</table>

<br />

