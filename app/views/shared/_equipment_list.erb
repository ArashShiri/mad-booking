<div id="equipmentList" class="section-container accordion" data-section="accordion" data-options="one_up: false">
		<% for cat in Category.find(:all, :order => 'name') %>
		<section>
			<p class="title" data-section-title>
				<a href="#">
					<%= cat.name %>
					<span class="right radius label inactive preview">
						<i class="icon-eye-open"></i>
					</span>
				</a>
			</p>
			<div class="content" data-section-content>
				<ul class="side-nav">
				<% for equip in cat.equipment.order('name ASC') %>
					<li class="item" data-id="<%= equip.id %>">
						<% if equip.status == 1 %>
							<span class="right label radius success inactive">In</span>
						<% else %>
							<span class="right label radius error inactive"><%= Equipment.get_status(equip.status) %></span> 
						<% end %>
						<span class="left">
							<%= check_box_tag equip.name, equip.id, false, :class => "equipCheck", :disabled => (equip.status > 1) %>
						</span>
						<%= link_to equip.name, "#", :onclick => "reloadCalendar([#{equip.id}])" %>
					</li>
				<% end %>
				</ul>
			</div>
		</section>
	<% end %>
</div>
<a id="deselect-previews" class="right label radius">Show all</a>